<div class="row mt-4">
  <div class="col">
    <h1 class="">View Logs</h1>
  </div>
  <div class="col">
    <!-- <button type="button" class="btn btn-success"
    onclick='exportCSV()'>
      Export as CSV
    </button> -->
  </div>
</div>
<%
  if (logs.length > 0) {
    %>
    <table id="logsTable" class="display">
      <thead>
        <tr>
          <th>Action ID</th>
          <th>Username</th>
          <th>Action</th>
          <th>File Name</th>
          <th>Timestamp</th>
          <th>Remarks</th>
        </tr>
      </thead>
      <tbody>
        <% logs.forEach(function(log) { %>
        <tr>
          <td><%= log.action_id %></td>
          <td><%= log.username %></td>
          <td><%= log.action %></td>
          <td><%= log.filename %></td>
          <td><%= log.timestamp %></td>
          <td><%= log.remarks %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <%
  } else {
    %>
    <p>No logs found</p>
    <%} %>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/json2csv"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
