<section class="h-100">
  <div class="container h-100">
    <div class="row justify-content-sm-center h-100">
      <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
        <div class="text-center my-5">
          <img src="/assets/logo.png" alt="logo" width="100">
        </div>
        <div class="card shadow-lg">
          <div class="card-body p-5">
            <h1 class="fs-4 card-title fw-bold mb-4">Change Password</h1>
            <form method="POST" action="/api/users/changePassword" class="needs-validation" novalidate="" autocomplete="off">
              <div class="mb-3">
                <label class="mb-2 text-muted" for="cp_username">Username</label>
                <input id="username" type="text" class="form-control" name="username" value="" required autofocus>
                <div class="invalid-feedback">
                  Username is invalid
                </div>
              </div>

              <div class="mb-3">
                <div class="mb-2 w-100">
                  <label class="text-muted" for="old_password">Password</label>
                  <!-- <a href="forgot.html" class="float-end">
                    Forgot Password?
                  </a> -->
                </div>
                <input id="old_password" type="password" class="form-control" name="old_password" required>
                  <div class="invalid-feedback">
                    Password is required
                  </div>
              </div>

              <div class="mb-3">
                <div class="mb-2 w-100">
                  <label class="text-muted" for="new_password">New Password</label>
                </div>
                <input id="new_password" type="password" class="form-control" name="new_password" required>
                  <div class="invalid-feedback">
                    Password is required
                  </div>
              </div>

              <div class="mb-3">
                <div class="mb-2 w-100">
                  <label class="text-muted" for="new_password_cfm">Confirm New Password</label>
                </div>
                <input id="new_password_cfm" type="password" class="form-control" name="new_password_cfm" required>
                  <div class="invalid-feedback">
                    Password is required
                  </div>
              </div>

              <div class="d-flex align-items-center">
                <!-- <div class="form-check">
                  <input type="checkbox" name="remember" id="remember" class="form-check-input">
                  <label for="remember" class="form-check-label">Remember Me</label>
                </div> -->
                <button type="submit" class="btn btn-primary ms-auto">
                  Change Password
                </button>
              </div>
            </form>
          </div>
          <!-- <div class="card-footer py-3 border-0">
            <div class="text-center">
              Don't have an account? <a href="register.html" class="text-dark">Create One</a>
            </div>
          </div> -->
        </div>
        <div class="text-center mt-5 text-muted">
          Copyright &copy; 2022 &mdash; Secure Folder Management
        </div>
      </div>
    </div>
  </div>
</section>